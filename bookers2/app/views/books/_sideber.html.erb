

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

<% if book.errors.any? %>
  <%= book.errors.count %>errors prohibited this user from being saved:
  <% book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<h2>User info</h2>
  <div class="profile-container">
      <%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
    <table class="table">
      <tbody>
        <tr></tr>
        <tr>
          <th>name</th>
          <th class="profile-name"><%= user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th class="profile-introduction"><%= user.introduction %></th>
        </tr>
      </tbody>
    </table>
   <div class="ml-1 mb-2">
    <%= link_to "Follow: #{user.followings.count}", followings_user_path(user.id) %>
    <%= "／" %>
    <%= link_to "Follower: #{user.followers.count}", followers_user_path(user.id) %>
   </div>

    <div class="row">
      <% if user.id == current_user.id %>
        <%= link_to  edit_user_path(user), class: 'btn btn-outline-secondary btn-block', method: :get do%><i class="fas fa-user-cog"></i><% end %>
      <% else %>
        <%= link_to user_path(user.id), class: 'btn btn-outline-secondary btn-block', method: :get do%><i class="fas fa-user-cog"></i><% end %>
      <% end %>
    </div>
    <h2 class="mt-3">New book</h2>

      <%= form_with model:book, local: true do |f| %>
    <div class="form-group">
      <label for="book_title">Title</label>
      <%= f.text_field :title, class: 'form-control'  %>
    </div>
    <div class="form-group">
      <label for="book_opinion">Option</label>
      <%= f.text_area :body, class: 'form-control book_body' %>
    </div>
    <div class="form-group">
      <%= f.submit 'Create Book', class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
</div>

